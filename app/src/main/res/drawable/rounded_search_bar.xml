<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:top="2dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#1F000000" /> <!-- Semi-transparent black for shadow -->
        </shape>
    </item>
    <!-- White background -->
    <item android:bottom="2dp" android:left="1dp" android:right="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</layer-list>