<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00695C"
    android:padding="24dp"
    tools:context=".ConfirmationActivity">

    <TextView
        android:id="@+id/hoorayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hooray!"
        android:textColor="@android:color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/partyIcon"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.5"/>

    <ImageView
        android:id="@+id/partyIcon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_party_popper"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        app:tint="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hoorayText"
        app:layout_constraintBottom_toTopOf="@id/confirmedText"/>

    <TextView
        android:id="@+id/confirmedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your reservation\nis confirmed!"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/partyIcon"
        app:layout_constraintBottom_toTopOf="@id/homepageButton"/>

    <Button
        android:id="@+id/homepageButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Go to homepage"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/myBookingsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Material3.SmallComponent"
        app:strokeColor="@android:color/white"
        app:strokeWidth="2dp" />

    <Button
        android:id="@+id/myBookingsButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@android:color/white"
        android:text="My bookings"
        android:textColor="#00695C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/homepageButton"
        app:shapeAppearance="@style/ShapeAppearance.Material3.SmallComponent" />

</androidx.constraintlayout.widget.ConstraintLayout>