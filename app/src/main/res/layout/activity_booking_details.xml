<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".BookingDetailsActivity">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_arrow_back_white"
        app:tint="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="Back" />

    <TextView
        android:id="@+id/tvRestaurantName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Restaurant Name"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="@font/poppins"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintStart_toStartOf="@id/backButton"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvRestaurantName"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ivRestaurantImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@android:drawable/ic_menu_gallery"
                    android:contentDescription="Restaurant Image" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#0D1B3E"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="24dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:textColor="#B0B0B0"
                            android:fontFamily="@font/poppins"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvBookingDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12 May"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/poppins"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#30FFFFFF"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:textColor="#B0B0B0"
                            android:fontFamily="@font/poppins"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tvBookingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21:30"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/poppins"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="32dp"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View menu"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"
                    app:drawableEndCompat="@drawable/ic_chevron_right"
                    app:drawableTint="#757575"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact restaurant"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"
                    app:drawableEndCompat="@drawable/ic_chevron_right"
                    app:drawableTint="#757575"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

                <TextView
                    android:id="@+id/btnCancelBooking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel booking"
                    android:textColor="#D32F2F"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:paddingVertical="16dp"
                    app:drawableEndCompat="@drawable/ic_chevron_right"
                    app:drawableTint="#D32F2F"/>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>