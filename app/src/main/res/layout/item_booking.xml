<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/bookingImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/bookingTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Saint Germain Bistro"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/bookingImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/iconDate"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_calendar_small"
            android:layout_marginTop="8dp"
            app:tint="#757575"
            app:layout_constraintStart_toStartOf="@id/bookingTitle"
            app:layout_constraintTop_toBottomOf="@id/bookingTitle"/>

        <TextView
            android:id="@+id/bookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thursday, 12 May 2022"
            android:textSize="14sp"
            android:textColor="#757575"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iconDate"
            app:layout_constraintTop_toTopOf="@id/iconDate"
            app:layout_constraintBottom_toBottomOf="@id/iconDate"/>

        <ImageView
            android:id="@+id/iconTime"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_clock_small"
            android:layout_marginTop="6dp"
            app:tint="#757575"
            app:layout_constraintStart_toStartOf="@id/bookingTitle"
            app:layout_constraintTop_toBottomOf="@id/iconDate"/>

        <TextView
            android:id="@+id/bookingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21:30"
            android:textSize="14sp"
            android:textColor="#757575"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iconTime"
            app:layout_constraintTop_toTopOf="@id/iconTime"
            app:layout_constraintBottom_toBottomOf="@id/iconTime"/>

        <ImageView
            android:id="@+id/iconGuests"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_person_small"
            android:layout_marginTop="6dp"
            app:tint="#757575"
            app:layout_constraintStart_toStartOf="@id/bookingTitle"
            app:layout_constraintTop_toBottomOf="@id/iconTime"/>

        <TextView
            android:id="@+id/bookingGuests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 guests"
            android:textSize="14sp"
            android:textColor="#757575"
            android:fontFamily="@font/poppins"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iconGuests"
            app:layout_constraintTop_toTopOf="@id/iconGuests"
            app:layout_constraintBottom_toBottomOf="@id/iconGuests"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>